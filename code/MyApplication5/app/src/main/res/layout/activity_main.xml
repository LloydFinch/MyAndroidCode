<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
		>

	<FrameLayout
			android:id="@+id/fram"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			>

		<Button
				android:layout_marginTop="40dp"
				android:id="@+id/btn_zan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="btn_onclick"
				android:text="赞"
				/>

		<TextView
				android:id="@+id/text_one"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="+1"
				android:textSize="25sp"
				android:visibility="invisible"
				android:layout_marginTop="40dp"
				/>
	</FrameLayout>

	<TextView
			android:layout_toRightOf="@id/fram"
			android:id="@+id/text_num"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="20"
			android:textSize="25sp"
			android:layout_alignBaseline="@id/fram"
			android:layout_marginTop="45dp"
			/>

	<LinearLayout
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:gravity="center"
	        android:layout_marginLeft="70dp"
			>

		<Button
				android:id="@+id/btn_rotate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="25sp"
				android:text="旋转"
				android:onClick="btnRotate_onclick"
				/>
	</LinearLayout>
	<ImageView
			android:id="@+id/image_heart"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:src="@drawable/heart"
	        android:layout_marginLeft="100dp"
	        android:layout_marginTop="200dp"
	        android:onClick="image_onclick"
			/>
	<Button
			android:id="@+id/btnClick"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cann't Click Me"
	        android:layout_alignParentBottom="true"
			android:onClick="btnClick_onclick"
	        android:layout_centerInParent="true"
			/>
	<ImageView
			android:id="@+id/image_select"
			android:layout_width="80dp"
			android:layout_height="80dp"
	        android:src="@drawable/elec01"
	        android:onClick="imageSelec_onlick"
			/>
</RelativeLayout>
