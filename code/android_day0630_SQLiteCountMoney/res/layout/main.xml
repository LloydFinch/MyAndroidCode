<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
		>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>

		<RadioGroup
				android:id="@+id/record_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

			<RadioButton
					android:id="@+id/record_type_in"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="收入"
					/>

			<RadioButton
					android:id="@+id/record_type_out"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="支出"
					/>
		</RadioGroup>

		<EditText
				android:id="@+id/record_money"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				/>

		<EditText
				android:id="@+id/record_category1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="出行"
				/>

		<EditText
				android:id="@+id/record_category2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="公交车"
				/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="记录"
				android:onClick="btnAddRecord_onclick"
				/>
	</LinearLayout>
	<ListView
			android:id="@+id/listview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>

	</ListView>
</LinearLayout>

